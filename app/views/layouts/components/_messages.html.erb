<% content_for :javascript do %>

    <script type="text/javascript">

        <% flash.each do |name, msg| %>

          $(function() {
              $.niftyNoty({
                  type: <%= name %>,
                  container: 'floating',
                  message: <%= msg %>,
                  closeBtn: false,
                  timer: 1500
              });
          })
        <% end %>
    </script>
<% end %>